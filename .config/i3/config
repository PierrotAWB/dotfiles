# XF86 Controllers
# Pulse Audio controls
bindsym XF86AudioRaiseVolume 	exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume 	exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute 			exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp 	exec light -A 5 # increase screen brightness
bindsym XF86MonBrightnessDown 	exec light -U 5 # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay 			exec playerctl play
bindsym XF86AudioPause 			exec playerctl pause
bindsym XF86AudioNext 			exec playerctl next
bindsym XF86AudioPrev 			exec playerctl previous

# Keybindings
bindsym $mod+control+q 			exec ~/.bin/scripts/lock 

bindsym $mod+q 					kill
bindsym $mod+space 				exec rofi -show run -config $HOME/.config/rofi

# /i/nner gaps
bindsym $mod+i					gaps inner current plus 5
bindsym $mod+shift+i			gaps inner current minus 5 

# /o/uter gaps
bindsym $mod+o 					gaps outer current plus 5
bindsym $mod+shift+o			gaps outer current minus 5

# screenshot
bindsym $mod+shift+p			exec scrot '%Y-%m-%d-%H:%M.png' -e 'mv $f ~/Pictures/Screenshots/'

# hide edges for next window opening-direction
hide_edge_borders both

# Terminal program bindings
bindsym $mod+c 					exec xrdb $HOME/.config/Xresources && st -e calcurse -D ~/.local/share/calcurse
bindsym $mod+e					exec xrdb $HOME/.config/Xresources && st -e neomutt 
bindsym $mod+n   				exec xrdb $HOME/.config/Xresources && st -e newsboat

# Startup
exec_always $HOME/.bin/scripts/default-layout
exec_always feh --no-fehbg --bg-scale $HOME/Pictures/background 
exec_always prepare-lock-screen # Prepare for locking
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always compton --config $HOME/.config/i3/compton.conf

## Touchpad configuration sensitivities
exec_always xinput set-prop 12 310 1 # Tapping button mapping
exec_always xinput set-prop 12 322 0.8 # Middle Emulation Enabled
exec_always xinput set-prop 13 325 1 # Touchpad Acceleration
